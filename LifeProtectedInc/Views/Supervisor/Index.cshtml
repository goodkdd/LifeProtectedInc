@model IEnumerable<LifeProtectedInc.Models.Supervisor>

@{
    ViewData["Title"] = "Supervisor";
}
<div class="container my-4">
    <div class="shadow-lg p-4 mb-5 bg-white rounded">
        <h2>Supervisor</h2>
        @if (User.IsInRole("admin"))
        {
        <p class="float-right p-2 border border-success rounded bg-success font-weight-bold">
            <a asp-action="Create" class="alert-dark bg-transparent">Create New</a>
        </p>
        }
        
        <div class="table-responsive">
            <table class="table" id="tablesorted-alt">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.SupervisorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupervisorID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>

                            <td>
                                @if (User.IsInRole("admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.SupervisorID" class="btn btn-default bg-secondary alert-dark">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.SupervisorID" class="btn btn-default bg-secondary alert-dark">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.SupervisorID" class="btn btn-default bg-danger alert-dark">Delete</a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
