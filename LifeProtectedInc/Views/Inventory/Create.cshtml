@model LifeProtectedInc.Models.Inventory

@{
    ViewData["Title"] = "Create";
}


<div class="container my-4">
    <div class="shadow-lg p-4 mb-5 bg-white rounded">

        <h2>Inventory</h2>
        <h3>Create</h3>




        <hr class="bg-dark" />

        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductNo" class="control-label"></label>
                    <input asp-for="ProductNo" class="form-control" />
                    <span asp-validation-for="ProductNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductAmount" class="control-label"></label>
                    <input asp-for="ProductAmount" class="form-control" />
                    <span asp-validation-for="ProductAmount" class="text-danger"></span>
                </div>


            </form>
        </div>
        <hr class="bg-dark" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default bg-success alert-dark font-weight-bold" />
            <a asp-action="Index" class="btn btn-default bg-light alert-dark font-weight-bold">Back to List</a>
        </div>



    </div>
</div>

