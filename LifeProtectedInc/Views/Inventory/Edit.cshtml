@model LifeProtectedInc.Models.Inventory

@{
    ViewData["Title"] = "Edit";
}



<div class="container my-4">
    <div class="shadow-lg p-4 mb-5 bg-white rounded">

        <h2>Inventory</h2>

        <h4>Edit</h4>
        <hr class="bg-dark" />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryID" />
            <div class="form-group">
                <label asp-for="ProductNo" class="control-label"></label>
                <input asp-for="ProductNo" class="form-control" />
                <span asp-validation-for="ProductNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductAmount" class="control-label"></label>
                <input asp-for="ProductAmount" class="form-control" />
                <span asp-validation-for="ProductAmount" class="text-danger"></span>
                <hr class="bg-dark" />
            </div>


            <input type="submit" value="Save" class="btn btn-default bg-success font-weight-bold" />

            <a asp-action="Index" class="btn btn-default alert-dark bg-transparent font-weight-bold">Back to List</a>



        </form>

    </div>
</div>





