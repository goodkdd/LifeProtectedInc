
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Login";
}


<div class="wrap-login100 p-t-190 p-b-30">
    <form class="login100-form validate-form" method="post">
        <div class="login100-form-avatar">
            <img src="~/images/LifeProtected.png" alt="AVATAR">
        </div>

        <span class="login100-form-title p-t-20 p-b-45">

        </span>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="wrap-input100 validate-input m-b-10" data-validate="Login is required">
            <input class="input100" asp-for="Email" placeholder="Email">           
            <span class="focus-input100"></span>
            <span class="symbol-input100">
                <i class="fa fa-user"></i>
            </span>
            
        </div>

        <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
            <input class="input100" asp-for="Password" placeholder="Password">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
                <i class="fa fa-lock"></i>
            </span>
        </div>

        <div class="container-login100-form-btn p-t-10">
            <button class="login100-form-btn" type="submit">
                @*<a class="txt1" asp-controller="Home" asp-action="About">Login </a>*@
                Login
            </button>
        </div>

        <div class="text-center w-full p-t-25 p-b-230">
            <a href="#" class="txt1">
                Forgot Password?
            </a>

            <br />
            <a class="txt1" asp-controller="Account" asp-action="Register">Create new account </a>

            <i class="fa fa-long-arrow-right"></i>
            @*<a class="txt1" href="#">

                </a>*@
        </div>
    </form>
</div>







